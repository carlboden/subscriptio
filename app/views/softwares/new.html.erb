<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-basic">
        <h2> Add a new software </h2>

          <%= simple_form_for @software do |f| %>
              <%= f.error_notification %>
              <%= f.input :name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "name" } %>
              <%= f.label :category %>
              <%= f.select :category,
                          ["marketing", "sales", "database software", "communication", "application suites", "word processing software", "spreadsheet software"],
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "category" } %>
              <%= f.input :demo_url,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "demo url" } %>
              <%= f.input :url,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "url" } %>
              <%= f.input :photo, as: :file %>
              <%= f.button :submit, "Add" %>
          <%end%>
      </div>
    </div>
  </div>
</div>
