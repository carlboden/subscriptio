<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-basic">

        <h2> Add a new subscription </h2>

        <div data-controller="software-plan">
            <%= simple_form_for([@company, @subscription]) do |f|%>
                <div class="form-group">
                  <%= label :software, "Software"%>
                  <%= select_tag :software, options_from_collection_for_select(@softwares, "id", "name"), include_blank: true, data: { action: "software-plan#fetchPlans" }, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= label :other, "Plan"%>
                    <div data-target="software-plan.wrapper", class="form-control">
                    
                    </div>
                </div>

                <%= f.input :start_date, as: :string, input_html: {class: "datepicker_full"} %> <br>
                <%= f.input :end_date, as: :string, input_html: { class: "datepicker_full"} %> <br>
                <%= f.input :number_of_user, as: :integer, required: true %> <br>
                <%= f.input :price, as: :float, label: 'Price per Month per User' %> <br>

                <%= f.submit "Add", class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
