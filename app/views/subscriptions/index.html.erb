<%if current_user.status == "Approved" || current_user.company_admin   %>
  <div class="container">
    <h1 class="text-center"> Subscriptions </h1>
    <div class="card-text-right">
      <%= link_to "Add new", new_company_subscription_path(current_user.company_id)%>
    </div>
  </div>

      <div class="card-subscription-grid">
        <%@subscriptions.each do |subscription|%>
          <div class="card-subscription">
            <a href="./subscriptions/<%=subscription.id%>"> <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> </a>
            <div class="card-subscription-infos">
              <h2><%=subscription.software_plan.software.name%></h2>
              <p> <%= subscription.software_plan.software.category %> - <%=subscription.software_plan.name%> - Lowest Price Available: <%=@subscription_decreasing_order.where(:software_plan_id => subscription.software_plan_id)[0].price%> - Official Price <%=subscription.software_plan.official_price%> </p>
              <p><%= subscription.end_date%></p>
              
              <a href="./subscriptions/<%=subscription.id%>/edit">edit </a> 
               <a href="./subscriptions/<%=subscription.id%>"> See the details</a>
              
            </div>
            <div class="card-subscription-indicators">
              <%= image_tag "traffic-light-red.png"%>
              <p><strong> â‚¬<%= subscription.price%></strong></p>
            </div>
          </div>
        <%end%>
      </div>

<%else%>

  <div class="container">
    <h2> Your account is still not approved </h2>
  </div>
  <%end%>



