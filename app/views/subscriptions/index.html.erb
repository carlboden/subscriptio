<div class="container">
  <div class="row justify-content-center">
    <h2 class="text-center"> Overview of subscriptions </h2>
  </div>
  <div class="row justify-content-end mr-3">
      <%= link_to new_company_subscription_path(current_user.company_id) do %> <i class="fas fa-plus "> Add new </i><% end %>
  </div>

  <div class="row mb-4 justify-content-center">
    <div>
    <%= form_tag company_subscriptions_path, method: :get do %>
      <%= text_field_tag :query2,
        params[:query2],
        class: "form-control",
        placeholder: "Find a software"
      %>
    </div>
    <div class="ml-3">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>

  <%@subscriptions.each do |subscription|%>
    <div class="card-subscription mb-3">
      <div class="col-xs-1 col-sm-2">
         <a href="./subscriptions/<%=subscription.id%>">
          <%= cl_image_tag subscription.software_plan.software.photo.key %> </a>
      </div>
      <div class="card-subscription-infos col-xs-5 col-sm-4">
        <h2><a href="./subscriptions/<%=subscription.id%>"> <%=subscription.software_plan.software.name%> </a></h2>
        <p> <%= subscription.software_plan.software.category %>  </p>
        <p><%= subscription.end_date%></p>
      </div>
      <div class="col-5">
        <p><strong> â‚¬<%= subscription.price%> / month</strong>
        <p> <%= subscription.software_plan.name%> </p>
        <p> <%= subscription.number_of_user%> users </p>
      </div>
      <div class="card-subscription-indicators col-1">
        <% if ( @lowest_price_same_range_number_user[subscription.id].price - subscription.price ) < 0 %>
          <%= image_tag "traffic-light-red.png"%>
        <% elsif @all_alternative_hash[subscription.id][1] < subscription.price %>
          <%= image_tag "traffic-light-orange.png"%>
        <% else %>
          <%= image_tag "traffic-light-green.png"%>
        <% end %>
      </div>
    </div>
  <%end%>

  <div class="row justify-content-center flickr_pagination">
    <%= will_paginate @subscriptions, renderer: BootstrapPagination::Rails %>
  </div>

</div>


